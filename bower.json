        "voice-player",
        "voice-recognition",
        "web-speech",
        "web-components"
    ],
    "ignore": [
        "**/.*",
        "node_modules",
        "bower_components"
    ],
    "dependencies": {
        "platform": "Polymer/platform#~0.2.3",
